pipeline {
    agent any
    
    stages{
        stage('clonar'){
            steps{
                git branch: 'main', url: 'https://github.com/DarleiC/exercicios_ebac.git'
            }
        }
        stage('mudar dir') {
            steps {
                dir("Modulo14-Testes_Automatizados_de_API_REST/testes-api-cy") {
                    sh pwd
                }
                sh pwd
            }
        } 
        stage('Instalar Dependencias') {
            steps {
                sh 'npm install'
            }
        }
        stage('Execução dos testes') {
            steps {
                sh 'NO_COLOR=1 npm run cy:run'
            }
        }
    }
}